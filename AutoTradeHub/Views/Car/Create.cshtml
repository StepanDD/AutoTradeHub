@using Microsoft.JSInterop
@model Car
@inject IJSRuntime JsRuntime

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Marka.Name">Марка</label>
                <select id="selectMarka" class="form-control" data-live-search="true">
                    @foreach (Marka marka in ViewBag.marks)
                    {
                        <option value="@marka.Name">@marka.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Model.Name">Модель</label>
                <select class="form-control" data-live-search="true">
                    @foreach (Model mmodel in ViewBag.models)
                    {
                        <option value="@mmodel.Name">@mmodel.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Generation.Name">Поколение</label>
                <select class="form-control" data-live-search="true">
                    @foreach (Generation generation in ViewBag.generations)
                    {
                        <option value="@generation.Name">@generation.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Year">Год</label>
                <input asp-for="Year" class="form-control" placeholder="Год">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Price">Цена</label>
                <input asp-for="Price" class="form-control" placeholder="Цена">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="BodyType">Тип кузова</label>
                <select class="form-control" data-live-search="true">
                    <option value="1">Седан</option>
                    <option value="2">Внедорожник</option>
                    <option value="3">Кабриолет</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="EngineType">Тип двигателя</label>
                <select class="form-control" data-live-search="true">
                    <option value="1">Бензиновый</option>
                    <option value="2">Дизельный</option>
                    <option value="3">Электрический</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="EngineVolume">Объём двигателя</label>
                <input asp-for="EngineVolume" class="form-control" placeholder="Объём двигателя">
                <span asp-validation-for="EngineVolume" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="EnginePower">Мощность двигателя</label>
                <input asp-for="EnginePower" class="form-control" placeholder="Мощность двигателя">
                <span asp-validation-for="EnginePower" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Gearbox">Тип КПП</label>
                <select class="form-control" data-live-search="true">
                    <option value="1">Автомат</option>
                    <option value="2">Механика</option>
                    <option value="3">Робот</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Privod">Привод</label>
                <select class="form-control" data-live-search="true">
                    <option value="1">Передний</option>
                    <option value="2">Задний</option>
                    <option value="3">Полный</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="SteeringWheel">Расположение руля</label>
                <select class="form-control" data-live-search="true">
                    <option value="1">Левый</option>
                    <option value="2">Правый</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Probeg">Пробег</label>
                <input asp-for="Probeg" class="form-control" placeholder="Пробег">
                <span asp-validation-for="Probeg" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Color.Name">Цвет</label>
                <select class="form-control" data-live-search="true">
                    @foreach (Color color in ViewBag.colors)
                    {
                        <option value="@color.Name">@color.Name</option>
                    }
                </select>
            </div>
        </div>

    </div>

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="7"></textarea>
    </div>

</form>
<script>
    function getSelectedMarka() {
        var selectedValue = document.getElementById("selectMarka").value;
        return selectedValue;
    }
</script>
